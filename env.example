# =============================================================================
# OM2Chat Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# =============================================================================

# =============================================================================
# Data Retention Settings
# =============================================================================
# How long to keep different types of data (in days)
# DOCUMENT_RETENTION_DAYS=30      # Documents are deleted after 30 days
# CHAT_RETENTION_DAYS=7          # Chat histories are deleted after 7 days
# SESSION_RETENTION_DAYS=90      # Client sessions are deleted after 90 days
# ANALYTICS_RETENTION_DAYS=365   # Analytics are deleted after 1 year
# ERROR_LOG_RETENTION_DAYS=30    # Error logs are deleted after 30 days

# =============================================================================

# =============================================================================
# Authentication & Security
# =============================================================================
# Generate a random string for AUTH_SECRET (required for NextAuth.js)
AUTH_SECRET=your-auth-secret-here

# NextAuth.js URL (your production domain or localhost for development)
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# Database (Supabase)
# =============================================================================
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anonymous key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Your Supabase service role key (private - for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# AI Services (OpenAI)
# =============================================================================
# Your OpenAI API key
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI model for chat (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# OpenAI model for embeddings (default: text-embedding-3-small)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Payment Processing (Stripe)
# =============================================================================
# Your Stripe publishable key (public)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Your Stripe secret key (private)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Stripe webhook secret (for verifying webhook signatures)
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# Email Services (Resend)
# =============================================================================
# Your Resend API key for sending emails
RESEND_API_KEY=re_your-resend-api-key

# From email address for sending emails
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# File Storage (Vercel Blob)
# =============================================================================
# Vercel Blob storage token
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token

# =============================================================================
# Redis (Optional - for resumable streams)
# =============================================================================
# Redis URL for caching and session storage (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================
# Vercel Analytics (enabled by default)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# Development & Testing
# =============================================================================
# Node environment
NODE_ENV=development

# Port for development server (optional)
PORT=3000

# =============================================================================
# Feature Flags (Optional)
# =============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# =============================================================================
# Rate Limiting & Redis (Required for Production)
# =============================================================================
# Redis URL for rate limiting (required for production)
# Format: redis://username:password@host:port or redis://host:port
REDIS_URL=redis://localhost:6379

# Rate limiting configuration (fallback if Redis unavailable)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# Security Headers (Optional)
# =============================================================================
# Content Security Policy
NEXT_PUBLIC_CSP_NONCE=your-csp-nonce

# =============================================================================
# Notes
# =============================================================================
# 1. Never commit your .env.local file to version control
# 2. Use different keys for development and production
# 3. Keep your secret keys secure and rotate them regularly
# 4. Use environment-specific files (.env.development, .env.production) if needed
# 5. For production, set these variables in your hosting platform (Vercel, etc.) 